page{
  width: 100%;
  height: 100%;
}
.message_main{
  width: 100%;
  height: 100%;
  position: relative;
}
.loginBox{
  width: 80%;
  height: 200px;
  position: relative;
  top: 200px;
  background-color: white;
  z-index: 99;
  border-radius: 20px;
  box-shadow: 0px 0px 50px 1px black;
}
.welcome{
  display: block;
  width: 100%;
  text-align: center;
}
.input_box{
  display: block;
  width: 80%;
  height: 55px;
  margin: auto;
}
.input_box text text{
  font-size: 12px;
  color: rgba(100, 100, 100, 0.5);
}
.input_box input{
  width: 100%;
  border: 1px black solid;
}
.log_btns{
  display: block;
  position: relative;
  top: 0px;
  left: 0px;
  height: 40px;
  width: 100%;
}
.log_btns>button{
  display: inline-block;
  width: 70px;
  height: 40px;
  text-align: center;
  position: absolute;
  top: 10px;
}
.log_btns button:nth-child(1){
  left: 20px;
}
.log_btns button:nth-child(2){
  right: 20px;
  background-color: greenyellow;
}
/* 管理员界面 */
.admWelcome{
  display: block;
  margin-top: 40%;
  text-align: center;
}
textarea{
  display: block;
  margin: auto;
  width: 75%;
  height: 100px;
  border: 2px black solid;
  margin-top: 10%;
}
.messages_btn{
  display: block;
  width: 100%;
  align-items: center;
}
.messages_btn button{
  display: block;
  width: 100px;
  height: 40px;
  line-height: 40px;
  background-color: greenyellow;
  margin-top: 20px;
}
.back{
  position: absolute;
  top: 10%;
  left: 20px;
  font-size: 30px;
  border: 2px black solid;
  border-radius: 50%;
  text-align: center;
  width: 35px;
  height: 35px;
  line-height: 35px;
}